<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@color/Roxo">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



    <TextView
        android:layout_margin="8dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="Problema:"
        android:textColor="#fff"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_margin="8dp"
        android:layout_marginTop="25dp"
        android:id="@+id/spinnerProblema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>

    <TextView
        android:layout_margin="8dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="25dp"
        android:text="Descricao:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editDescricao"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:background="@drawable/edittextestilizado"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textMultiLine" />
    <Button
        android:text="ENviar"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/buttonEnviar"
        android:drawableRight="@drawable/ic_setinha"
        android:paddingLeft="40dp"
        android:paddingRight="30dp"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:background="@drawable/buttonestilizado"
        android:layout_height="wrap_content" />
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>