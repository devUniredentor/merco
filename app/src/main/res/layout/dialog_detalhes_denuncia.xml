<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="10dp"
    >

    <TableRow>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/image_foto" android:layout_gravity="center_horizontal" android:layout_margin="2dp"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/text_nome"/>
    </TableRow>

    <TableRow android:layout_marginTop="10dp">
        <TextView
            android:textSize="16sp"
            android:text="Problema:"
            android:id="@+id/text1"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_below="@+id/text1"
            android:id="@+id/textProblema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </TableRow>

    <TableRow android:layout_marginTop="10dp">
        <TextView
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Descrição:"
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_below="@+id/text2"
            android:id="@+id/textDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </TableRow>

    <TableRow android:layout_marginTop="10dp">
        <Switch
            android:visibility="gone"
            android:id="@+id/switchSolucionado"
            android:text="Solucionado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </TableRow>



</TableLayout>